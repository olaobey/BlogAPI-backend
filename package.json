{
  "name": "BlogAPI-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "https://github.com/olaobey/BlogAPI-backend.git",
  "author": "Ajeigbe Olaoluwa Samuel <olaobey15@gmail.com>",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "yarn run prebuild && npx tsc",
    "start": "node build/server.js",
    "start:dev": "ts-node server.ts",
    "dev": "yarn run stop && yarn run build && pm2 start -f build/server.js --attach",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:migrate": "npx prisma migrate dev && npx prisma generate",
    "db:push": "npx prisma db push",
    "deploy": "yarn run build && yarn run dev",
    "stop": "pm2 kill"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "app-root-path": "^3.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-paginate": "^1.0.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "jest": "^29.6.4",
    "morgan": "^1.10.0",
    "pm2": "^5.3.0",
    "ts-jest": "^29.1.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-paginate": "^1.0.1",
    "@types/express-rate-limit": "^6.0.0",
    "@types/http-errors": "^2.0.1",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.7",
    "@types/uuid": "^9.0.3",
    "@types/winston": "^2.4.4",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "16.13.0"
  }
}
